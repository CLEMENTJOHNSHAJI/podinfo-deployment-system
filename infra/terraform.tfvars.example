# Podinfo Deployment Configuration
# Generated by setup-config.sh

environment = "dev"
github_org = ""
github_repo = "podinfo-deployment-system"
github_branch = "main"
aws_region = "us-west-2"
aws_account_id = ""

# Enable advanced features
enable_codedeploy = true
enable_secrets_rotation = true
enable_provisioned_concurrency = true
provisioned_concurrency = 2

# EC2 Auto Scaling Configuration - exactly 2 instances as required
asg_min_size = 2
asg_max_size = 2
asg_desired_capacity = 2
min_instances = 2
max_instances = 4
